<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signfrd"
    tools:context=".register.RegisterUser">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/res_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="Email"
                android:textColorHint="@color/green"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_border_layout"
                android:layout_marginTop="350dp"/>
            <EditText
                android:id="@+id/res_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/green"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_border_layout"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/res_conpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:textColorHint="@color/green"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_border_layout"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/res_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="Name"
                android:textColorHint="@color/green"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_border_layout"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/res_radio"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_condition"
                    android:textColor="@color/green"
                    android:textSize="16sp"/>
            </LinearLayout>
            <Button
                android:id="@+id/res_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"
                android:background="@drawable/text_border_layout"
                android:text="SignUp"
                android:textSize="18sp"
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>